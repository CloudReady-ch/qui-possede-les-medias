{
  "name": "CapitExt",
  "version": "0.0.0",
  "description": "Who own what",
  "homepage_url": "https://github.com/DesignandHuman/capitext",
  "manifest_version": 2,
  "minimum_chrome_version": "58",
  "applications": {
    "gecko": {
      "id": "{}",
      "strict_min_version": "55.0"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "optional_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ],
    "persistent": false
  },
	"browser_action": {
		"default_icon": "icon.png",
    "default_popup": "popup.html",
    "browser_style": true
	},
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "browser-polyfill.min.js",
        "content-script.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ]
}
