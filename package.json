{
  "private": true,
  "scripts": {
    "lint": "eslint source/*.js && stylelint source/*.css",
    "lint:fix": "eslint --fix source/*.js && stylelint --fix source/*.css",
    "test": "npm run lint && run-s build",
    "build": "webpack --mode=production",
    "start": "webpack --mode=development --watch",
    "release:amo": "cd distribution && webext submit",
    "release:cws": "cd distribution && webstore upload --auto-publish",
    "release": "run-s build update-version save-url release:*",
    "save-url": "echo https://github.com/$TRAVIS_REPO_SLUG/tree/$TRAVIS_COMMIT > distribution/SOURCE_URL",
    "update-version": "VERSION=$(utc-version); echo $VERSION; dot-json distribution/manifest.json version $VERSION"
  },
  "dependencies": {
    "dom-loaded": "^1.0.1",
    "element-ready": "^3.0.0",
    "localforage": "^1.7.2",
    "select-dom": "^4.1.3",
    "webext-domain-permission-toggle": "0.0.2",
    "webext-dynamic-content-scripts": "^5.0.1",
    "webext-options-sync": "^0.15.2",
    "webextension-polyfill": "^0.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "^7.0.0",
    "ava": "^1.0.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.0",
    "chrome-webstore-upload-cli": "^1.1.1",
    "copy-webpack-plugin": "^4.5.1",
    "dot-json": "^1.0.4",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "npm-run-all": "^4.1.3",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "terser-webpack-plugin": "^1.1.0",
    "utc-version": "^1.1.0",
    "webext": "^1.9.1-with-submit.1",
    "webpack": "^4.8.3",
    "webpack-chrome-extension-reloader": "^1.0.0",
    "webpack-cli": "^3.0.1"
  },
  "ava": {
    "files": [
      "test/*-test.js"
    ],
    "require": [
      "esm",
      "./test/fixture/globals.js"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "browser": true
    },
    "rules": {
      "no-unused-vars": [
        2,
        {
          "varsIgnorePattern": "^h$"
        }
      ]
    },
    "globals": {
      "browser": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
